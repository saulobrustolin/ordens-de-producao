datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id          String @id @default(uuid())
    email       String @unique
    password    String
    createdAt   DateTime @default(now())
    orders      Order[]
}

model Order {
  id          String @id @default(uuid())
  code        String @unique
  description String
  status      String
  createdBy   String
  steps       OrderStep[]
  user        User @relation(fields: [createdBy], references: [id])
}

model OrderStep {
  id            String @id @default(uuid())
  orderId       String
  name          String
  sequence      Int
  completedAt   DateTime?
  order         Order @relation(fields: [orderId], references: [id])
}